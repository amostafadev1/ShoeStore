<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header">
        <item name="android:fontFamily">@font/mclaren</item>
        <item name="android:textColor">@color/theme_darker</item>
        <item name="android:textSize">32sp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input_outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/theme</item>
    </style>

    <style name="main_text" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/bebas_neue</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="header.item">
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/bebas_neue</item>
    </style>

    <style name="main_text.item">
        <item name="android:textColor">@color/theme_darker</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="goButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="label" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="logo_guideline">
        <item name="layout_constraintGuide_percent">0.15</item>
    </style>

</resources>